<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" app:cardCornerRadius="8dp" app:cardBackgroundColor="#E6E6E6"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Verifier:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verifier_label"
                android:textSize="10pt"
                app:layout_constraintStart_toStartOf="@+id/game_name_label"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/gameIdTextView"/>
        <TextView
                android:text="empty slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verifierNameTextView"
                android:textSize="10pt"
                app:layout_constraintStart_toStartOf="@+id/guesserNameTextView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/verifier_label"
                app:layout_constraintBottom_toBottomOf="@+id/verifier_label"/>
        <TextView
                android:text="0000-0000-0000-0000"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:id="@+id/verifierIdTextView"
                app:layout_constraintStart_toStartOf="@+id/verifier_id_label"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/verifier_id_label"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="Verifier Id:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verifier_id_label"
                app:layout_constraintStart_toStartOf="@+id/verifier_label"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/verifier_label" android:layout_marginStart="16dp"/>
        <TextView
                android:text="Default game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gameNameTextViewIntro" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:textSize="12pt" app:layout_constraintStart_toEndOf="@+id/game_name_label"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/game_name_label"
                app:layout_constraintBottom_toBottomOf="@+id/game_name_label"/>
        <TextView
                android:text="Creation date:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/creation_date_label"
                app:layout_constraintStart_toStartOf="@+id/game_name_label"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/game_name_label"
                android:layout_marginStart="20dp"/>
        <TextView
                android:text="Game Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/game_name_label" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="44dp" android:textSize="12pt"/>
        <TextView
                android:text="21-01-2000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/creationDateTextView"
                app:layout_constraintTop_toBottomOf="@+id/creation_date_label"
                app:layout_constraintStart_toStartOf="@+id/creation_date_label" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="Game ID:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/game_id_label" app:layout_constraintStart_toStartOf="@+id/creation_date_label"
                app:layout_constraintTop_toBottomOf="@+id/creationDateTextView" android:layout_marginTop="8dp"/>
        <TextView
                android:text="0000-0000-0000-0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gameIdTextView"
                app:layout_constraintTop_toBottomOf="@+id/game_id_label"
                app:layout_constraintStart_toStartOf="@+id/game_id_label" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="Guesser:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guesser_label"
                android:textSize="10pt"
                app:layout_constraintTop_toBottomOf="@+id/verifierIdTextView"
                app:layout_constraintStart_toStartOf="@+id/verifier_label" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="empty slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guesserNameTextView"
                android:textSize="10pt"
                app:layout_constraintTop_toTopOf="@+id/guesser_label"
                app:layout_constraintBottom_toBottomOf="@+id/guesser_label"
                app:layout_constraintStart_toStartOf="@+id/gameNameTextViewIntro"/>
        <TextView
                android:text="Guesser Id:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guesser_id_label" app:layout_constraintStart_toStartOf="@+id/guesser_label"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/guesser_label"
                android:layout_marginStart="16dp"/>
        <TextView
                android:text="0000-0000-0000-0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guesserIdTextView"
                app:layout_constraintTop_toBottomOf="@+id/guesser_id_label"
                app:layout_constraintStart_toStartOf="@+id/guesser_id_label" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>
        <Button
                android:text="Join game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/joinGameButton"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="44dp" app:layout_constraintBottom_toBottomOf="parent"
                android:background="#ffffff" app:layout_constraintTop_toBottomOf="@+id/guesserIdTextView"
                android:layout_marginTop="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>